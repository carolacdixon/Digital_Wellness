{
  "manifest_version": 3,
  "name": "AI Digital Wellness Companion",
  "version": "2.1",
  "description": "AI-powered mindful browsing assistant with computer vision content analysis",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["js/textAnalysis.js", "js/visionAnalysis.js", "js/content.js"],
      "css": ["css/style.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
